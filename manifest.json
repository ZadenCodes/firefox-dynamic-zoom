{
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "browser_style": false,
        "default_icon": "icons/app-48.png",
        "default_popup": "popup/choose_width.html",
        "default_title": "Choose zoom width"
    },
    "content_scripts": [
        {
            "js": [
                "content.js"
            ],
            "matches": [
                "*://*/*"
            ]
        }
    ],
    "description": "Dynamically adjusts the zoom based on the width of the window.",
    "homepage_url": "https://github.com/ingolemo/firefox-dynamic-zoom",
    "icons": {
        "48": "icons/app-48.png"
    },
    "manifest_version": 2,
    "name": "Dynamic Zoom",
    "permissions": [
        "storage"
    ],
    "version": "1.8.1"
}
